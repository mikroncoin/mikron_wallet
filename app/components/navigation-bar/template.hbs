<nav class="navbar navbar-expand-lg navbar-dark">
  {{#link-to 'index' class="navbar-brand"}}
    <picture>
      <source type="image/svg+xml" srcset="{{root-url "images/brand-dark.svg"}}">
      <img height="25" src="{{root-url "images/brand-dark.png"}}" alt="{{t 'product'}}">
    </picture>
  {{/link-to}}
  <div class="ml-auto pr-3">
    <span class="navbar-text pb-0">
      {{status-tooltip}}
    </span>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" {{action toggleShow}} data-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="{{t 'toggleNavigation'}}">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class=" {{if show 'in' 'collapse'}} navbar-collapse justify-content-end" id="navbarNavDropdown">
    {{#bs-nav type="bar" class="navbar-nav" as |nav|}}
      {{#nav.item}}
        {{#nav.link-to 'index'}}
          {{t 'overview'}}
        {{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to 'wallets.overview.accounts.create' wallet}}
          {{fa-icon "plus-square"}} {{t 'wallets.overview.create'}}
        {{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to 'wallets.overview.settings' wallet}}
          {{t 'settings'}}
        {{/nav.link-to}}
      {{/nav.item}}
      {{#nav.item}}
        {{#nav.link-to 'wallets.logout' wallet}}
          {{t 'logout'}}
        {{/nav.link-to}}
      {{/nav.item}}
      {{#nav.dropdown as |dd|}}
        {{wallet-language onChangeLanguage=onChangeLanguage dd=dd styleClass=''}}
      {{/nav.dropdown}}
    {{/bs-nav}}
  </div>
</nav>